<h1><%= @product.name %></h1>

<%= image_tag @product.image.url(:medium) %>

<table class="table">
  <tr>
    <th>Price</th>
    <th>Description</th>
  </tr>
  <tr>
    <td><%= @product.price %></td>
    <td><%= @product.description %></td>
  </tr>
</table>


<%= link_to "Edit Product", edit_product_path(@product), :class => "btn btn-primary" %>
<%= link_to "Delete Product", product_path(@product),
          :class => "btn btn-primary",
          :data =>
          { :confirm => "you sure?",
            :method => "delete" } %>
